<%= form_for @product do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>

  <%= f.fields_for :experiences do |experience| %>
  <p>
    <%= experience.label :name %><br />
    <%= experience.text_field :name %><br />
    <%= experience.check_box :_destroy %>
    <%= experience.label :_destroy, 'remove' %>
  </p>
  <% end %>
   
  <p>
    <%= f.submit %>
  </p>
<% end %>