<section class="call_to_action">
    <div class="container">
        <div class="row">
            <div class="col-md-8 wow fadeInLeft animated">
                <div class="left">
                    <h2>LOOKING FOR PERSONALIZED EXPERIENCES?</h2>
                    <p>Please tell us what you want in your personalized experience.</p>
                </div>
            </div>
            <div class="col-md-3 col-md-offset-1 wow fadeInRight animated">
                <div class="baton">
                    <a href="#CONTACT">
                        <button type="button" class="btn btn-primary cs-btn" data-toggle="modal" data-target="#contact_modal">Contact Us</button>
                    </a>    
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Modal -->
<div id="contact_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h1>Create your own experience</h1>
        <p>Tell us the kind of experience you would want to live</p>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12  wow fadeInLeft animated" id="formulario">
                <form class="contact-form" action="" onsubmit="sendMail();return false;">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="name" placeholder="Name"  required>
                            <input type="email" class="form-control" id="email" placeholder="Email"  required>                            
                        </div>
                        <div class="col-md-6">
                            <textarea class="form-control" id="message" rows="25" cols="10" placeholder="  Describe your adventure..." required></textarea>                              
                        </div>
                        <button type="submit" class="btn btn-default submit-btn form_submit">SEND MESSAGE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>

</div>
</div>