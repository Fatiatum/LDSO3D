<%= form_for @cont do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :from_mail %><br>
    <%= f.text_field :from_mail %>
  </p>
 
  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>

  <p>
    <%= f.label :msg %><br>
    <%= f.text_area :msg %>
  </p>
   
  <p>
    <%= f.submit %>
  </p>
<% end %>