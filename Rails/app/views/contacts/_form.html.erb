<%= form_for @cont do |f| %>
<p>
  <%= f.label Catalog.human_attribute_name(:name) %><br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label Catalog.human_attribute_name(:from_mail) %><br>
  <%= f.text_field :from_mail %>
</p>

<p>
  <%= f.label Catalog.human_attribute_name(:subject) %><br>
  <%= f.text_field :subject %>
</p>

<p>
  <%= f.label Catalog.human_attribute_name(:msg) %><br>
  <%= f.text_area :msg %>
</p>

<p>
  <%= f.submit t ".send" %>
</p>
<% end %>